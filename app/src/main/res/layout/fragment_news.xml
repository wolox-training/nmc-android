<?xml version="1.0" encoding="utf-8"?>

<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vSwipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/vFragmentNews">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/vRecyclerViewNews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_icon"
        android:layout_width="@dimen/news_fab_width_and_height"
        android:layout_height="@dimen/news_fab_width_and_height"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/vRecyclerViewNews"
        android:layout_margin="@dimen/static_spacing_large"
        android:clickable="true"
        android:focusable="true"/>

    </RelativeLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>